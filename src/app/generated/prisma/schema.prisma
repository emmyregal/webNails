generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// One to many relationship: one user can have many appointments : an appointment can only 'belong' to one user

model User {
  user_id      Int           @id @default(autoincrement())
  email        String        @unique
  first_name   String
  last_name    String
  Appointments Appointment[]
}

model Appointment {
  appointment_id Int      @id @default(autoincrement())
  date           DateTime
  type           String
  userId         Int
  user           User     @relation(fields: [userId], references: [user_id])
}
